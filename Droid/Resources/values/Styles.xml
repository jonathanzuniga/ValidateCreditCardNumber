<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="MyTheme.Base" parent="@android:style/Theme.Holo"></style>

	<style name="MyTheme" parent="MyTheme.Base">
		<item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColor">#aaa</item>
		<item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowBackground">@android:color/black</item>

        <item name="android:editTextStyle">@style/MyTheme.EditText</item>
	</style>

	<style name="MyTheme.EditText" parent="@android:style/Widget.Holo.EditText">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:longClickable">false</item>
		<item name="android:inputType">textNoSuggestions</item>
<!--		<item name="android:layout_height">match_parent</item>-->
		<item name="android:padding">0dp</item>
		<item name="android:textColor">#aaa</item>
		<item name="android:textSelectHandle">@drawable/blank</item>
	</style>
</resources>
